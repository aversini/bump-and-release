{
  "name": "bump-and-release",
  "version": "0.2.0",
  "license": "MIT",
  "author": "Arno Versini",
  "description": "A tiny command line helper to bump and release packages",
  "homepage": "https://github.com/aversini/bump-and-release",
  "repository": {
    "type": "git",
    "url": "git@github.com:aversini/bump-and-release.git"
  },
  "bin": {
    "bump-and-release": "bin/bump-and-release.js"
  },
  "files": [
    "bin",
    "src"
  ],
  "scripts": {
    "bump": "node ./bin/bump-and-release.js -t bump -c \"./configuration/config.js\"",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -p angular",
    "lint:fix": "eslint --fix --color \"./src/**/*.js\" \"./bin/**/*.js\"",
    "lint": "eslint --color \"./src/**/*.js\" \"./bin/**/*.js\"",
    "prettier:fix": "prettier --loglevel error --write \"{src/**/*.js,bin/**/*.js}\"",
    "prettier:all": "npm-run-all --serial prettier:fix lint:fix",
    "release": "node ./bin/bump-and-release.js -t release -c \"./configuration/config.js\""
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/cli": "^11.0.0",
    "babel-eslint": "^10.1.0",
    "compare-versions": "^3.6.0",
    "conventional-changelog-cli": "^2.1.1",
    "cross-env": "^7.0.3",
    "eslint-config-prettier": "^7.2.0",
    "eslint": "^7.18.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1"
  },
  "dependencies": {
    "async-memoize-one": "1.0.1",
    "fs-extra": "9.0.1",
    "inquirer": "7.3.3",
    "kleur": "4.1.3",
    "ora": "5.2.0",
    "semver": "7.3.4",
    "yargs": "16.2.0"
  }
}
